}


string palabraAzar(){
string s="";
int n=0;
	tablero[0] = "carro";
	tablero[1] = "matematicas";
	tablero[2] = "manzana";
	tablero[3] = "magia";
	tablero[4] = "agua";
	tablero[5] = "ojos";
	tablero[6] = "delfin";
	tablero[7] = "perro";
	tablero[8] = "leon";
	tablero[9] = "onomatopeya";
	tablero[10] = "rinoceronte";

	n = 1+rand()%10;
	s = tablero[n];
return s;
}

int tamanio(string p) {
	int tam=p.length();  
	return tam;  
}
void imprimirMuneco(int intento) {
    intento+=1;
    cout<<"\n";
    switch (intento) {
        case 1:
            cout<<mono[0]<<endl;
            cout<<"\n\n\n\n\n";
            break;
        case 2:
            cout<<mono[0]<<endl;
            cout<<mono[1]<<endl;
            cout<<"\n\n\n\n";
            break;
        case 3:
            cout<<mono[0]<<endl;
            cout<<mono[1]<<endl;
            cout<<mono[2]<<endl;
            cout<<"\n\n\n";
            break;
        case 4:
            cout<<mono[0]<<endl;
            cout<<mono[1]<<endl;
            cout<<mono[2]<<endl;
            cout<<mono[3]<<endl;
            cout<<"\n\n";

            break;
        case 5:
            cout<<mono[0]<<endl;
            cout<<mono[1]<<endl;
            cout<<mono[2]<<endl;
            cout<<mono[3]<<endl;
            cout<<mono[4]<<endl;
            cout<<"\n";
            break;
        case 6:
            cout<<mono[0]<<endl;
            cout<<mono[1]<<endl;
            cout<<mono[2]<<endl;
            cout<<mono[3]<<endl;
            cout<<mono[4]<<endl;
            cout<<mono[5]<<endl;
            cout<<"\n";
            break;
        case 7:
            cout<<mono[0]<<endl;
            cout<<mono[1]<<endl;
            cout<<mono[2]<<endl;
            cout<<mono[3]<<endl;
            cout<<mono[4]<<endl;
            cout<<mono[5]<<endl;
            cout<<mono[6]<<endl;
            
            break;
    }   
  
}
	    
bool existeLetra(string cadena,char letra){
	int i=0;
	bool ban=false;
	    	
	    while(i<cadena.length() && ban==false){
	    	if (cadena[i] == letra) {
	            ban=true;
	        }
	    		i++;
		}
	    	
	    	
	return ban;	
	    	
}
