	   for(i=0;i<tam;i++){
	    	copia[i]='-';
	   }
	
	cout << copia<<endl;
	while(intentos<8 && bandera==false){
	
	cout<<"Tiene "<<tam<<" letras"<<endl;
	cout<<"\nIntentos: "<<intentos<<endl;	  
		  
		  
	  cout <<  "Introduce una letra: "<<endl;
	  cin.get(letra);
	  
	  
	  	system("cls");
	  	
	  	
	  	 for ( i = 0; i < tam; i++) {
		        if (arreglo[i] == letra) {
		                copia[i] = letra ;
		        }
		        
			}
	  	
	  	
	  	if(existeLetra(original,letra)){
		   
	    
		}else{
						
		
			imprimirMuneco(intentos);	
		}
	  	
	    cout<<copia;
